{
  "manifest_version": 2,
  "name": "Browser Control",
  "description": "This extension allows you to delete whatever you want from a webpage.",
  "version": "1.3",
  "content_scripts": [
    {
        "matches": ["<all_urls>"],
        "js": ["js/browser_Control.js"]
    }
  ],
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },
  "icons": {
    "16": "images/16.png",
    "48": "images/48.png",
    "128": "images/128.png"      
  },
  "browser_action": {
    "name": "Browser Control"
  },
  "permissions": [
    "tabs", "http://*/*", "storage"
  ]
}
